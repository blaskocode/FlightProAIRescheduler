{
  "expo": {
    "name": "Flight Schedule Pro",
    "slug": "flight-schedule-pro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.flightschedulepro.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take pre-flight inspection photos.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to attach photos to flight records."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.flightschedulepro.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Flight Schedule Pro to access your camera to take pre-flight inspection photos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ]
    ],
    "scheme": "flight-schedule-pro",
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}

